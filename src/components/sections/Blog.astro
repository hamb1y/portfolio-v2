---
import { siteData } from '../../data/site-data';
import Card from '../Card.astro';
---

<section id="blog" class="section">
  <div class="container">
    <h2 class="section-title text-4xl font-bold mb-12">Latest from the Blog</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
      {siteData.blog.recentPosts.map((post) => (
        <a 
          href={siteData.blog.url}
          class="block hover:no-underline"
        >
          <Card variant="glass" className="p-6 h-full hover:transform hover:-translate-y-2 transition-transform">
            <h3 class="text-xl font-bold mb-3 text-cyan-300 hover:text-purple-300 transition-colors">
              {post.title}
            </h3>
            <div class="flex items-center gap-4 text-sm text-gray-400 mb-4">
              <span class="flex items-center gap-1">
                üìÖ {post.date}
              </span>
              <span class="flex items-center gap-1">
                ‚è±Ô∏è {post.readTime}
              </span>
            </div>
            <p class="text-gray-300">
              Read this post and more on my blog where I share insights about web development, 
              design, and technology.
            </p>
          </Card>
        </a>
      ))}
    </div>
    
    <!-- Blog link CTA -->
    <Card variant="glass" className="p-8 text-center">
      <h3 class="text-2xl font-bold mb-4">Want to read more?</h3>
      <p class="text-gray-300 max-w-2xl mx-auto mb-6">
        I write regularly about web development, design systems, and the intersection of 
        technology and creativity. Check out my blog for tutorials, insights, and thoughts.
      </p>
      <a 
        href={siteData.blog.url}
        class="glass-btn inline-flex items-center gap-2 px-8 py-3 text-lg"
      >
        Visit My Blog
        <span>‚Üí</span>
      </a>
    </Card>
  </div>
  
  <style>
    .grid {
      display: grid;
    }
    .grid-cols-1 {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
    .md\:grid-cols-3 {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
    .gap-8 {
      gap: 2rem;
    }
    .mb-12 {
      margin-bottom: 3rem;
    }
    .mb-4 {
      margin-bottom: 1rem;
    }
    .mb-3 {
      margin-bottom: 0.75rem;
    }
    .mb-6 {
      margin-bottom: 1.5rem;
    }
    .p-6 {
      padding: 1.5rem;
    }
    .p-8 {
      padding: 2rem;
    }
    .text-center {
      text-align: center;
    }
    .text-4xl {
      font-size: 2.25rem;
    }
    .text-2xl {
      font-size: 1.5rem;
    }
    .text-xl {
      font-size: 1.25rem;
    }
    .text-lg {
      font-size: 1.125rem;
    }
    .text-sm {
      font-size: 0.875rem;
    }
    .font-bold {
      font-weight: 700;
    }
    .text-cyan-300 {
      color: #67e8f9;
    }
    .text-purple-300 {
      color: #d8b4fe;
    }
    .text-gray-300 {
      color: #d1d5db;
    }
    .text-gray-400 {
      color: #9ca3af;
    }
    .block {
      display: block;
    }
    .flex {
      display: flex;
    }
    .items-center {
      align-items: center;
    }
    .gap-4 {
      gap: 1rem;
    }
    .gap-2 {
      gap: 0.5rem;
    }
    .gap-1 {
      gap: 0.25rem;
    }
    .mx-auto {
      margin-left: auto;
      margin-right: auto;
    }
    .max-w-2xl {
      max-width: 42rem;
    }
    .inline-flex {
      display: inline-flex;
    }
    .px-8 {
      padding-left: 2rem;
      padding-right: 2rem;
    }
    .py-3 {
      padding-top: 0.75rem;
      padding-bottom: 0.75rem;
    }
    .hover\:no-underline:hover {
      text-decoration: none;
    }
    .hover\:transform:hover {
      transform: translateY(-0.5rem);
    }
    .hover\:-translate-y-2:hover {
      transform: translateY(-0.5rem);
    }
    .hover\:text-purple-300:hover {
      color: #d8b4fe;
    }
    .transition-transform {
      transition-property: transform;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
      transition-duration: 150ms;
    }
    .transition-colors {
      transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
      transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
      transition-duration: 150ms;
    }
  </style>
</section>