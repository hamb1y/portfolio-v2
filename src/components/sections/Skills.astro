---
import { siteData } from '../../data/site-data';
import Card from '../Card.astro';
---

<section id="skills" class="section">
  <div class="container">
    <h2 class="section-title text-4xl font-bold mb-12">Skills & Tech Stack</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      {siteData.skills.categories.map((category) => (
        <Card variant="glass" className="p-6">
          <h3 class="text-xl font-bold mb-4 text-cyan-300">{category.name}</h3>
          <div class="flex flex-wrap gap-2">
            {category.skills.map((skill) => (
              <span class="glass-badge text-sm">{skill}</span>
            ))}
          </div>
        </Card>
      ))}
    </div>
    
    <!-- Tech Stack Visualization -->
    <Card variant="glass" className="p-8">
      <h3 class="text-2xl font-bold mb-6 text-center">My Tech Stack</h3>
      <div class="flex flex-wrap justify-center gap-6">
        {/* Frontend */}
        <div class="text-center">
          <div class="w-16 h-16 glass-panel rounded-full flex items-center justify-center mb-2 mx-auto">
            <span class="text-2xl">‚ö°</span>
          </div>
          <span class="text-sm font-medium">Frontend</span>
        </div>
        
        {/* Backend */}
        <div class="text-center">
          <div class="w-16 h-16 glass-panel rounded-full flex items-center justify-center mb-2 mx-auto">
            <span class="text-2xl">üîß</span>
          </div>
          <span class="text-sm font-medium">Backend</span>
        </div>
        
        {/* Database */}
        <div class="text-center">
          <div class="w-16 h-16 glass-panel rounded-full flex items-center justify-center mb-2 mx-auto">
            <span class="text-2xl">üóÑÔ∏è</span>
          </div>
          <span class="text-sm font-medium">Database</span>
        </div>
        
        {/* DevOps */}
        <div class="text-center">
          <div class="w-16 h-16 glass-panel rounded-full flex items-center justify-center mb-2 mx-auto">
            <span class="text-2xl">üöÄ</span>
          </div>
          <span class="text-sm font-medium">DevOps</span>
        </div>
        
        {/* Design */}
        <div class="text-center">
          <div class="w-16 h-16 glass-panel rounded-full flex items-center justify-center mb-2 mx-auto">
            <span class="text-2xl">üé®</span>
          </div>
          <span class="text-sm font-medium">Design</span>
        </div>
      </div>
    </Card>
    
    <!-- Experience level bars -->
    <Card variant="glass" className="p-8 mt-8">
      <h3 class="text-2xl font-bold mb-6">Experience Levels</h3>
      <div class="space-y-4">
        <div>
          <div class="flex justify-between mb-1">
            <span class="font-medium">Frontend Development</span>
            <span class="text-cyan-300">Expert</span>
          </div>
          <div class="h-2 bg-gray-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-cyan-400 to-purple-400 rounded-full w-4/5"></div>
          </div>
        </div>
        
        <div>
          <div class="flex justify-between mb-1">
            <span class="font-medium">Backend Development</span>
            <span class="text-cyan-300">Advanced</span>
          </div>
          <div class="h-2 bg-gray-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-cyan-400 to-purple-400 rounded-full w-3/4"></div>
          </div>
        </div>
        
        <div>
          <div class="flex justify-between mb-1">
            <span class="font-medium">UI/UX Design</span>
            <span class="text-cyan-300">Intermediate</span>
          </div>
          <div class="h-2 bg-gray-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-cyan-400 to-purple-400 rounded-full w-2/3"></div>
          </div>
        </div>
        
        <div>
          <div class="flex justify-between mb-1">
            <span class="font-medium">DevOps</span>
            <span class="text-cyan-300">Intermediate</span>
          </div>
          <div class="h-2 bg-gray-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-cyan-400 to-purple-400 rounded-full w-1/2"></div>
          </div>
        </div>
      </div>
    </Card>
  </div>
  
  <style>
    .grid {
      display: grid;
    }
    .grid-cols-1 {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
    .md\:grid-cols-2 {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    .lg\:grid-cols-4 {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }
    .gap-6 {
      gap: 1.5rem;
    }
    .gap-2 {
      gap: 0.5rem;
    }
    .gap-6 {
      gap: 1.5rem;
    }
    .mb-12 {
      margin-bottom: 3rem;
    }
    .mb-4 {
      margin-bottom: 1rem;
    }
    .mb-6 {
      margin-bottom: 1.5rem;
    }
    .mb-2 {
      margin-bottom: 0.5rem;
    }
    .mb-1 {
      margin-bottom: 0.25rem;
    }
    .mt-8 {
      margin-top: 2rem;
    }
    .p-6 {
      padding: 1.5rem;
    }
    .p-8 {
      padding: 2rem;
    }
    .text-4xl {
      font-size: 2.25rem;
    }
    .text-2xl {
      font-size: 1.5rem;
    }
    .text-xl {
      font-size: 1.25rem;
    }
    .text-sm {
      font-size: 0.875rem;
    }
    .font-bold {
      font-weight: 700;
    }
    .font-medium {
      font-weight: 500;
    }
    .text-center {
      text-align: center;
    }
    .text-cyan-300 {
      color: #67e8f9;
    }
    .flex {
      display: flex;
    }
    .flex-wrap {
      flex-wrap: wrap;
    }
    .justify-center {
      justify-content: center;
    }
    .justify-between {
      justify-content: space-between;
    }
    .items-center {
      align-items: center;
    }
    .mx-auto {
      margin-left: auto;
      margin-right: auto;
    }
    .w-16 {
      width: 4rem;
    }
    .h-16 {
      height: 4rem;
    }
    .rounded-full {
      border-radius: 9999px;
    }
    .space-y-4 > * + * {
      margin-top: 1rem;
    }
    .h-2 {
      height: 0.5rem;
    }
    .bg-gray-800 {
      background-color: #1f2937;
    }
    .bg-gradient-to-r {
      background-image: linear-gradient(to right, var(--tw-gradient-stops));
    }
    .from-cyan-400 {
      --tw-gradient-from: #22d3ee;
      --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(34, 211, 238, 0));
    }
    .to-purple-400 {
      --tw-gradient-to: #a78bfa;
    }
    .rounded-full {
      border-radius: 9999px;
    }
    .overflow-hidden {
      overflow: hidden;
    }
    .w-4\/5 {
      width: 80%;
    }
    .w-3\/4 {
      width: 75%;
    }
    .w-2\/3 {
      width: 66.666667%;
    }
    .w-1\/2 {
      width: 50%;
    }
  </style>
</section>