---
import { siteData } from '../../data/site-data';
---

<section class="section min-h-screen flex items-center justify-center">
  <div class="container">
    <div class="max-w-4xl mx-auto text-center fade-in">
      <!-- Glass card for hero content -->
      <div class="glass-card p-8 md:p-12 mb-8">
        <h1 class="text-5xl md:text-7xl font-bold mb-4 bg-gradient-to-r from-purple-400 to-cyan-300 bg-clip-text text-transparent">
          {siteData.name}
        </h1>
        <p class="text-2xl md:text-3xl text-gray-300 mb-6">
          {siteData.tagline}
        </p>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto mb-8">
          {siteData.bio}
        </p>
      </div>
      
      <!-- Social links with glass badges -->
      <div class="flex flex-wrap justify-center gap-4">
        {siteData.socials.map((social) => (
          <a 
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="glass-btn inline-flex items-center gap-2"
            aria-label={`Visit my ${social.name}`}
          >
            <span class="text-lg">
              {/* Icon placeholder - would use actual Lucide icons */}
              {social.icon === 'github' && '‚ö°'}
              {social.icon === 'linkedin' && 'üíº'}
              {social.icon === 'twitter' && 'üê¶'}
              {social.icon === 'mail' && '‚úâÔ∏è'}
            </span>
            <span>{social.name}</span>
          </a>
        ))}
      </div>
      
      <!-- Scroll indicator -->
      <div class="mt-16 animate-bounce">
        <a href="#about" class="inline-block">
          <div class="w-6 h-10 border-2 border-gray-400 rounded-full flex justify-center">
            <div class="w-1 h-3 bg-gray-400 rounded-full mt-2 animate-pulse"></div>
          </div>
        </a>
      </div>
    </div>
  </div>
  
  <style>
    .min-h-screen {
      min-height: 100vh;
    }
    .flex {
      display: flex;
    }
    .items-center {
      align-items: center;
    }
    .justify-center {
      justify-content: center;
    }
    .text-center {
      text-align: center;
    }
    .max-w-4xl {
      max-width: 56rem;
    }
    .mx-auto {
      margin-left: auto;
      margin-right: auto;
    }
    .mb-4 {
      margin-bottom: 1rem;
    }
    .mb-6 {
      margin-bottom: 1.5rem;
    }
    .mb-8 {
      margin-bottom: 2rem;
    }
    .mt-16 {
      margin-top: 4rem;
    }
    .p-8 {
      padding: 2rem;
    }
    .md\:p-12 {
      padding: 3rem;
    }
    .text-5xl {
      font-size: 3rem;
    }
    .md\:text-7xl {
      font-size: 4.5rem;
    }
    .text-2xl {
      font-size: 1.5rem;
    }
    .md\:text-3xl {
      font-size: 1.875rem;
    }
    .text-lg {
      font-size: 1.125rem;
    }
    .font-bold {
      font-weight: 700;
    }
    .bg-gradient-to-r {
      background-image: linear-gradient(to right, var(--tw-gradient-stops));
    }
    .from-purple-400 {
      --tw-gradient-from: #a78bfa;
      --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(167, 139, 250, 0));
    }
    .to-cyan-300 {
      --tw-gradient-to: #67e8f9;
    }
    .bg-clip-text {
      -webkit-background-clip: text;
      background-clip: text;
    }
    .text-transparent {
      color: transparent;
    }
    .text-gray-300 {
      color: #d1d5db;
    }
    .text-gray-400 {
      color: #9ca3af;
    }
    .flex-wrap {
      flex-wrap: wrap;
    }
    .justify-center {
      justify-content: center;
    }
    .gap-4 {
      gap: 1rem;
    }
    .gap-2 {
      gap: 0.5rem;
    }
    .inline-flex {
      display: inline-flex;
    }
    .items-center {
      align-items: center;
    }
    .inline-block {
      display: inline-block;
    }
    .w-6 {
      width: 1.5rem;
    }
    .h-10 {
      height: 2.5rem;
    }
    .border-2 {
      border-width: 2px;
    }
    .border-gray-400 {
      border-color: #9ca3af;
    }
    .rounded-full {
      border-radius: 9999px;
    }
    .w-1 {
      width: 0.25rem;
    }
    .h-3 {
      height: 0.75rem;
    }
    .mt-2 {
      margin-top: 0.5rem;
    }
    .bg-gray-400 {
      background-color: #9ca3af;
    }
    .animate-bounce {
      animation: bounce 1s infinite;
    }
    .animate-pulse {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    @keyframes bounce {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }
    @keyframes pulse {
      0%, 100% {
        opacity: 1;
      }
      50% {
        opacity: 0.5;
      }
    }
  </style>
</section>