---
import Layout from "../../components/Layout.astro";
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const projectContents = await getCollection('projectContent');
  return projectContents.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { title, description, technologies, link } = project.data;
const { Content } = await render(project);
---

<Layout title={title} description={description}>
  <div class="min-h-screen pt-32">
    <div class="container max-w-4xl">
      <article class="glass-panel p-8">
        <header class="mb-8">
          <h1 class="text-4xl font-bold mb-4">{title}</h1>
          <p class="text-xl text-text-muted mb-6">{description}</p>
          
          {technologies && technologies.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-6">
              {technologies.map((tech: string) => (
                <span class="glass-badge">{tech}</span>
              ))}
            </div>
          )}
          
          {link && (
            <div class="mb-6">
              <a 
                href={link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="btn-primary btn inline-flex items-center gap-2"
              >
                <span>Visit Project</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            </div>
          )}
        </header>
        
        <div class="prose prose-invert max-w-none">
          <Content />
        </div>
        
        <footer class="mt-12 pt-8 border-t border-border">
          <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <a href="/projects" class="btn-secondary btn">&larr; Back to Projects</a>
            <div class="text-text-muted text-sm">
              Project detail â€¢ {technologies?.length || 0} technologies
            </div>
          </div>
        </footer>
      </article>
    </div>
  </div>
</Layout>