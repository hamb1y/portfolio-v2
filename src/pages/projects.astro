---
import Layout from "../components/Layout.astro";
import Card from "../components/Card.astro";
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<Layout title="Projects">
  <div class="min-h-screen pt-32">
    <div class="container">
      <h1 class="text-5xl font-bold mb-12">Projects</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => {
          const { title, description, tags, github, live, featured } = project.data;
          return (
            <Card variant="glass" className="h-full hover-scale transition-transform duration-300">
              <div class="flex flex-col h-full p-6">
                {featured && (
                  <span class="glass-badge self-start mb-3">Featured</span>
                )}
                <h3 class="text-2xl font-bold mb-3">{title}</h3>
                <p class="text-text-muted mb-4 flex-grow">{description}</p>
                
                {tags && tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {tags.map((tag) => (
                      <span class="glass-badge text-xs">{tag}</span>
                    ))}
                  </div>
                )}
                
                 <div class="flex gap-3 mt-auto pt-4">
                   {github && (
                     <a
                       href={github}
                       target="_blank"
                       rel="noopener noreferrer"
                       class="glass-btn flex-1 text-center py-2"
                     >
                       GitHub
                     </a>
                   )}
                   {live && (
                     <a
                       href={live}
                       target="_blank"
                       rel="noopener noreferrer"
                       class="btn-primary btn flex-1 text-center py-2"
                     >
                       Live Demo
                     </a>
                   )}
                   {(!github && !live) && (
                     <a
                       href={`/projects/${project.id}`}
                       class="btn-secondary btn flex-1 text-center py-2"
                     >
                       View Details
                     </a>
                   )}
                 </div>
              </div>
            </Card>
          );
        })}
      </div>
    </div>
  </div>
</Layout>