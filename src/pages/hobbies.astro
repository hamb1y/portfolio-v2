---
import Layout from "../components/Layout.astro";
import Card from "../components/Card.astro";
import { getCollection } from 'astro:content';

const hobbies = await getCollection('hobbies');
---

<Layout title="Hobbies">
  <div class="min-h-screen pt-32">
    <div class="container">
      <h1 class="text-5xl font-bold mb-12">Hobbies & Interests</h1>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {hobbies.map((hobby) => {
          const { emoji, name, description } = hobby.data;
          return (
            <Card variant="glass" className="hover-scale transition-transform duration-300">
              <div class="p-6 text-center">
                <span class="text-5xl mb-4 block">{emoji}</span>
                <h3 class="text-2xl font-bold mb-2">{name}</h3>
                <p class="text-text-muted">{description}</p>
              </div>
            </Card>
          );
        })}
      </div>
    </div>
  </div>
</Layout>